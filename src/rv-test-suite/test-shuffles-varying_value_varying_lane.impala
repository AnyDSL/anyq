
fn @loop_body(lane: i32, vec_width: i32, read: fn(i32)->i32, write: fn(i32, i32)->(), global: fn(i32)->&mut i32) -> () {

	let mydata = read(lane);

	let shuffle = shuffle_i32(lane, vec_width);

	let new_data = shuffle(mydata, 7 - mydata);

	write(lane, new_data);
}

